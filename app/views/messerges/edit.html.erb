<h1 class="text-light text-center mt-5">編集</h1>
<!-- form_with部分 -->
<%= form_with model:@messerge, local: true do |f| %>
  <h4 class="text-light text-center mt-5">本文</h4>
  <div class="text-center mt-5">
    <%= f.text_area :comment%>
    <div class="mt-3"><%= f.submit '更新', class:"btn btn-primary" %></div>
  </div>
<% end %>